#!/usr/bin/env bash

set -e

<% if link('mysql').p('pxc_enabled') == true %>
PIDFILE=/var/vcap/sys/run/galera-agent/galera-agent.pid
source /var/vcap/packages/pxc-utils/pid_utils.sh

set +e
kill_and_wait ${PIDFILE} 25 0 > /dev/null
return_code=$?

echo 0
exit ${return_code}
<% else %>
echo 0
exit 0
<% end %>
